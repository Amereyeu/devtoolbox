<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="DevtoolboxWindow" parent="AdwApplicationWindow">
    <property name="default-width">600</property>
    <property name="default-height">300</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkHeaderBar" id="header_bar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>

          <!-- Change here -->
          <object class="TextFileArea" id="_textarea">
            <property name="name">Input Area</property>
            <property name="show-action-btn">true</property>
            <property name="show-copy-btn">true</property>
            <property name="show-paste-btn">true</property>
            <property name="show-open-btn">true</property>
            <property name="show-clear-btn">true</property>
            <property name="action-name">Action!</property>
            <property name="text-show-line-numbers">true</property>
            <property name="text-highlight-current-line">true</property>
            <property name="text-syntax-highlighting">true</property>
            <property name="text_language_highlight">python</property>
            <property name="area-height">500</property>
            <property name="use_default_text_extensions">true</property>
            <property name="use_default_image_extensions">true</property>
            <property name="use_custom_file_extensions">true</property>
          </object>
          <!-- Change here -->

        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Devtoolbox</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
